  "Header for bash_script": {
  "prefix": "echo_comment_block",
  "body": [
    "echo \"-------------------------------------------------------\"",
    "echo \" ${1:text}\"",
    "echo \"-------------------------------------------------------\""
  ],
  "description": "Header for bash_script"
}, 
"Header for bash_script including author and filename": {
  "prefix": "header_with_author",
  "body": [
    "#!/bin/bash",
    "#",
    "# Script Name: ${TM_FILENAME}",
    "#",
    "# Author: ${1:author}",
    "# Date : $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
    "#",
    "# Description: ${2:Description}",
    "# *****************************************************************",
    ""
  ],
  "description": "Header for bash_script"
}
}